<div id="signup" v-cloak>
  <div class="container" v-if="!cloudSuccess">
    <h2 class="text-center">Edit Developer Details</h2>
    <div class="signup-form">
      <hr/>
      <!-- <ajax-form action="signup" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm"> -->
      <form action ="/developers/edit" method="POST" >
        <input type="hidden" class="form-control" id="id" name="id" value="<%=developer.id %>">
        <div class="form-group">
          <label for="fullName">Full Name</label>
          <input type="text" class="form-control" id="fullName" name="fullName" value="<%=developer.fullName %>">
        </div>
        <div class="form-group">
          <label for="emailAddress">Email Address</label>
          <input type="text" class="form-control" id="emailAddress" name="emailAddress" value="<%=developer.emailAddress %>">
        </div>
        <fieldset class="form-group">
            <label class="form-check-label">Auth Level</label>
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="isAdmin" id="isAdmin" value="true"
                <% if(developer.isAdmin) { %>
                  checked
                <% } %>
                >
                <label class="form-check-label" for="isAdmin">
                  Admin
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="isManager" id="isManager" value="true"
                <% if(developer.isManager) { %>
                  checked
                <% } %>
                >
                <label class="form-check-label" for="Manager">
                  Manager
                </label>
              </div>
              <div class="form-check disabled">
                <input class="form-check-input" type="checkbox" name="isDev" id="isDev" disabled checked>
                <label class="form-check-label" for="isDev">
                  Developer
                </label>
              </div>
            </div>
        </fieldset>
        <button type="submit" class="btn-dark btn-lg btn-block">Edit Developer Details</button>
      </form>
      <hr/>
      <a type="button" class="btn btn-danger btn-lg btn-block" href="/developers/edit-developers/delete/<%=developer.id%>">Delete Project</a>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
