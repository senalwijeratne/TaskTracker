<div id="welcome">
  <div class="container">

    <div  style="display: inline-flex;">
      <h2>My Tasks</h2>
      <a href="/tasks/add-tasks"><button class="btn btn-outline-info ml-2" style="">Log Task</button></a>
    </div>

    <hr/>

    <div class="card">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Project</th>
            <th scope="col">Hours</th>
            <th scope="col">Overtime</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody>

          <% if(tasks) { %>
            <% tasks.forEach (task => { %>
              <tr>
                <td><%=task.taskName %></td>
                <td><%=task.taskDescription %></td>
                <td><%=task.project.projectName %></td>
                <td><%=task.taskHours %></td>
                <td><%=task.taskOvertime %></td>
                <td><a class="btn btn-outline-secondary btn-sm" href="/tasks/edit-tasks/<%=task.id %>"><img class="cloud cloud-1" alt="A pencil icon" src="/images/edit.png"/></a></td>
              </tr>
            <%  }) %>
          <% } %>

        </tbody>
      </table>
    </div>

  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
