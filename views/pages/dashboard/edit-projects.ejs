              <% managers.forEach ( manager => { %>
                <% if (projects.manager.id != manager.id) {%>
                  <option value="<%=manager.id %>"><%=manager.fullName %></option>
                <%  } else {%>
                  <option value="<%=manager.id %>" selected><%=manager.fullName %></option>
              <%  }}) %>
            <% } %>

          </select>
        </div>

