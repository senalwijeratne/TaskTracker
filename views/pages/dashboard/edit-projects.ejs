    <h2 class="text-center">Edit Project Details</h2>
    <div class="signup-form">
      <hr/>
      <form action="/add-projects/edit" method="POST">
        <input type="hidden" class="form-control" id="id" name="id" value="<%=projects.id %>">
        <div class="form-group">
          <label for="projectName">Project Name</label>
          <input type="text" class="form-control" id="projectName" name="projectName" value="<%=projects.projectName %>">
        </div>
        <div class="form-group">
          <label for="projectDescription">Project Description</label>
          <textarea class="form-control" id="projectDescription" name="projectDescription" rows="4"><%=projects.projectDescription %></textarea>
        </div>

        <div class="form-group">
          <label for="projectManager">Project Manager</label>
          <select class="form-control" id="projectManager" name="manager" >

